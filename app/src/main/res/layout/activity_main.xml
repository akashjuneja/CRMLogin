<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f5e9"
    tools:context="com.example.darksky.crmlogin.SignIn">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textColor="#a5d6a7"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="161dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/username1"
        android:layout_alignTop="@+id/username1" />

    <EditText
        android:id="@+id/username1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter your user name"
        tools:layout_editor_absoluteY="150dp"
        tools:layout_editor_absoluteX="133dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/password1"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textColor="#a5d6a7"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="247dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignBaseline="@+id/password1"
        android:layout_alignBottom="@+id/password1"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteY="234dp"
        tools:layout_editor_absoluteX="124dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="86dp" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text="LOGIN"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="325dp"
        android:layout_marginBottom="161dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/password1"
        android:layout_marginEnd="36dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDICIANS"
        android:textColor="#00600f"
        android:textStyle="bold"
        android:textSize="40sp"
        tools:layout_editor_absoluteY="45dp"
        tools:layout_editor_absoluteX="86dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
